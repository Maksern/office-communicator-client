<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane styleClass="base" prefHeight="386.0" prefWidth="566.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
<children>
   <Button styleClass="button" layoutX="13.0" layoutY="14.0" mnemonicParsing="false" onAction="#getFriends" prefHeight="34.0" prefWidth="80.0" text="Friends"></Button>
   <ScrollPane fx:id="friendsScroll" styleClass="scrollPane" layoutX="9.0" layoutY="56.0" prefHeight="242.0" prefWidth="161.0" visible="false">
      <content>
         <VBox fx:id="friendsVBox" prefHeight="235.0" prefWidth="144.0" />
      </content>
   </ScrollPane>

   <Button styleClass="button" layoutX="103.0" layoutY="14.0" mnemonicParsing="false" onAction="#getGroups" prefHeight="34.0" prefWidth="80.0" text="Groups"></Button>
   <ScrollPane fx:id="groupsScroll" styleClass="scrollPane" layoutX="9.0" layoutY="56.0" prefHeight="242.0" prefWidth="161.0" visible="false">
      <content>
         <VBox fx:id="groupsVBox" prefHeight="235.0" prefWidth="144.0" />
      </content>
   </ScrollPane>

   <Button styleClass="button" layoutX="185.0" layoutY="343.0" mnemonicParsing="false" prefHeight="34.0" prefWidth="80.0" text="Call" textAlignment="CENTER">
   </Button>
   <Button styleClass="button" fx:id="sendButton" layoutX="472.0" layoutY="343.0" mnemonicParsing="false" onAction="#sendMessage" prefHeight="34.0" prefWidth="80.0" text="Send" textAlignment="CENTER">
   </Button>
   <TextField  fx:id="messageText" layoutX="273.0" layoutY="343.0" prefHeight="34.0" prefWidth="190.0" promptText="Your message" />

   <ScrollPane styleClass="scrollPane" layoutX="185.0" layoutY="41.0" prefHeight="289.0" prefWidth="366.0">
      <content>
         <VBox fx:id="chatHistory" prefHeight="286.0" prefWidth="348.0" />
      </content>
   </ScrollPane>

   <Button layoutX="14.0" layoutY="300.0" mnemonicParsing="false" prefHeight="25.0" prefWidth="154.0" text="Add Friend">
      <font>
         <Font name="Times New Roman" size="14.0" />
      </font>
   </Button>

   <Button layoutX="14.0" layoutY="343.0" mnemonicParsing="false" prefHeight="25.0" prefWidth="154.0" text="Add Group">
      <font>
         <Font name="Times New Roman" size="14.0" />
      </font>
   </Button>

</children>
</AnchorPane>
